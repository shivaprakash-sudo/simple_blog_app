<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %>

    <body>
        <%- include("../partials/header") %>
            <div class="content">
                <h2>All Blogs</h2>
                <div class="blogs-container">
                    <% if (blogs.length > 0) { %>
                        <% blogs.forEach(blog=>{%>
                            <a class="single-blog" href="/blogs/<%= blog._id %>">
                                <h3 class="title">
                                    <%=blog.title%>
                                </h3>
                                <p class="snippet">
                                    <%=blog.snippet%>
                                </p>
                            </a>
                            <%}) %>
                                <% } else { %>
                                    <p>There are no blogs as of now</p>
                                    <% } %>
                </div>
            </div>
            <%- include("../partials/footer") %>
    </body>

</html>